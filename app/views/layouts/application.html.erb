<!DOCTYPE html>
<html>
  <head>
    <title>ImdbClone</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <!-- Compiled and minified CSS -->
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css">

 <!-- Compiled and minified JavaScript -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js"></script>

  </head>
  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <a href="/"><img id="header" class="brand-logo" src= "<%= asset_path('IMDB.jpeg') %>" alt="IMDB Logo"></a>

    <%= form_tag( movies_path, method: "get", id: "search-form") do %>
      <% end %>
    <%= form_tag search_url, method: "get", id: "search-form" do %>
      <%= text_field_tag :search, params[:search], placeholder: "The Land Before Time" %>
      <%= submit_tag "Search Movies", name: nil %>
    <% end %>
<<<<<<< HEAD
    <nav>
      <ul>
        <% if user_signed_in? %>
          <%= "Welcome #{current_user.username}" %>
          <li>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          </li>
            <%= link_to('Edit registration', edit_user_registration_path) %>
          </li>
          <li>
            <%= link_to("My Profile")%>
          </li>
            <% else %>
          <li>
            <%= link_to('Login', new_user_session_path)  %>
          </li>
          <li>
            <%= link_to('Register', new_user_registration_path) %>
          </li>
        <% end %>
      </ul>
    </nav>
    <div id='content-wrapper'>
      <%= yield %>
    </div>

  </body>
</html>
