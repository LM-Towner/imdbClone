<!DOCTYPE html>
<html>
  <head>
    <title>ImdbClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <img src= "<%= asset_path('IMDB.jpeg') %>" alt="IMDB Logo">
    <%= form_tag( movies_path, method: "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "The Land Before Time" %>
      <%= submit_tag "Search Movies" %>
    <% end %>
    <%= yield %>
  </body>
</html>
